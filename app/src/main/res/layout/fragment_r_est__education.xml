<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".REst_EducationFragment">

    <ImageView
        android:id="@+id/LogoHelpme"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:src="@drawable/logo_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13999999" />

    <TextView
        android:id="@+id/titleSTUDENTADVISER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:width="350dp"
        android:text="@string/personalizedWelcomeStudentTitle"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LogoHelpme" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:width="350dp"
        android:text="@string/personalizedWelcomeStudent"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleSTUDENTADVISER" />

    <EditText
        android:id="@+id/etInstitucionEducativa"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:width="345dp"
        android:drawablePadding="10dp"
        android:background="@drawable/editborderblack"
        android:hint="@string/nameInstitution"
        android:padding="10dp"
        android:textColorHint="@color/gray"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/etCarrera"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:width="345dp"
        android:drawablePadding="10dp"
        android:background="@drawable/editborderblack"
        android:hint="@string/nameProgramaAcademico"
        android:padding="10dp"
        android:textColorHint="@color/gray"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/etInstitucionEducativa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/etNivelEstudios"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:width="345dp"
        android:drawablePadding="10dp"
        android:background="@drawable/editborderblack"
        android:hint="Nivel de estudios"
        android:padding="10dp"
        android:textColorHint="@color/gray"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/etCarrera"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnContinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:width="265dp"
        android:height="58dp"
        android:textColor="@color/white"
        android:text="@string/btnNext"
        android:backgroundTint="@color/secondary"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etNivelEstudios" />

</androidx.constraintlayout.widget.ConstraintLayout>